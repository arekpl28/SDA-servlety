<web-app>
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.arek.MyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PathServlet</servlet-name>
        <servlet-class>com.arek.PathServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>home.work.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OneUser</servlet-name>
        <servlet-class>home.work.OneUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PathServlet</servlet-name>
        <url-pattern>/path/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OneUser</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

</web-app>